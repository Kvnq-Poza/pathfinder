{
  "manifest_version": 3,
  "name": "PathFinder - Visual JSON Explorer",
  "short_name": "PathFinder",
  "version": "1.0.0",
  "description": "Zero-dependency, high-performance visual tool for mapping, querying, and generating access logic for deeply nested JSON structures.",
  "author": "Kvnq Poza",
  "homepage_url": "https://pathfinder.js.org/",
  "offline_enabled": true,
  "permissions": ["activeTab", "scripting", "storage", "contextMenus"],

  "action": {
    "default_title": "PathFinder - Visual JSON Explorer",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_end"
    }
  ]
}
